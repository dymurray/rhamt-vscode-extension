          "jdbc",
          "jonas",
          "jrun",
          "jsonb",
          "jsonp",
          "kafka",
          "keycloak",
          "kubernetes",
          "liquibase",
          "log4j",
          "logging",
          "micrometer",
          "narayana",
          "openjdk",
          "openjdk11",
          "openshift",
          "opentelemetry",
          "oraclejdk",
          "orion",
          "picocli",
          "resin",
          "resteasy",
          "rmi",
          "rpc",
          "seam",
          "soa",
          "spring",
          "thorntail",
          "weblogic",
          "websphere"]
      },
      {
        "name": "source-only",
        "description": "Indicates whether the input is source code or compiled binaries.",
        "type": "Boolean",
        "ui-type": ["single"],
        "required": true,
        "editable": false

      },
      {
        "name": "skip-static-report",
        "description": "If set, reports will not be generated.",
        "type": "Boolean",
        "ui-type": ["single"],
        "required": true,
        "editable": false
      },
      {
        "name": "overwrite",
        "description": "If set, overwrite the output directory.",
        "type": "Boolean",
        "ui-type": ["single"],
        "required": false
      },
      {
        "name": "json-output",
        "description": "Create analysis and dependency output as json.",
        "type": "Boolean",
        "ui-type": ["single"],
        "required": false
      },
      {
        "name": "output",
        "description": "The location of the generated analysis results.",
        "type": "String",
        "ui-type": ["single"],
        "required": true,
        "disabled": true
      },
      {
        "name": "analyze-known-libraries",
        "description": "Analyze known open-source libraries.",
        "type": "Boolean",
        "ui-type": ["single"],
        "required": false
      }

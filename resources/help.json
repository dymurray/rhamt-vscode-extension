{
    "options": [
      {
        "name": "name",
        "description": "The name of this configuration.",
        "type": "String",
        "ui-type": ["single"],
        "required": true
      },
      {
        "name": "cli",
        "description": "Path to cli executable.",
        "type": "File",
        "ui-type": ["file"],
        "required": false
      },
      {
        "name": "input",
        "description": "Path to application source code.",
        "type": "Path",
        "ui-type": ["many", "file_or_directory", "text"],
        "placeholder": "No Input Specified",
        "required": true,
        "editable": true
      },
      {
        "name": "target",
        "description": "The target technology to consider for analysis.",
        "type": "String",
        "ui-type": ["select-many", "text"],
        "required": true,
        "new-features": ["openliberty", "jakarta-ee"],
        "available-options": [
          "azure-appservice",
          "containerization",
          "quarkus",
          "eap7",
          "eap8",
          "openjdk",
          "jakarta-ee",
          "jakarta-ee8+",
          "jakarta-ee9+",
          "jws6",
          "eap",
          "camel 3",
          "camel 4",
          "linux",
          "openjdk11",
          "openjdk17",
          "openjdk21",
          "openliberty",
          "springboot"
        ],
        "editable": true
      },
      {
        "name": "source",
        "description": "The source technology to consider for analysis.",
        "type": "String",
        "ui-type": ["select-many", "text"],
        "required": false,
        "available-options": [
          "agroal",
